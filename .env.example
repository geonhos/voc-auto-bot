# =========================
# VOC Auto Bot - Environment Variables
# =========================
# Run `./scripts/init-secrets.sh` to generate .env with random secrets.
# Or copy this file to .env and fill in the values manually.

# =========================
# Database Configuration
# =========================
POSTGRES_DB=vocautobot
POSTGRES_USER=voc_user
# SECURITY: Generate with `openssl rand -base64 24`
POSTGRES_PASSWORD=
POSTGRES_PORT=5432

# =========================
# Redis Configuration
# =========================
REDIS_PORT=6379
# SECURITY: Generate with `openssl rand -base64 24`
REDIS_PASSWORD=

# =========================
# MinIO Configuration
# =========================
MINIO_ROOT_USER=minio_admin
# SECURITY: Generate with `openssl rand -base64 24`
MINIO_ROOT_PASSWORD=

# =========================
# JWT Configuration
# =========================
# SECURITY: Generate with `openssl rand -base64 48`
JWT_SECRET=

# =========================
# AI Service Configuration
# =========================
# SECURITY: Generate with `openssl rand -hex 32`
AI_SERVICE_API_KEY=

# =========================
# Encryption Configuration
# =========================
# SECURITY: 32-byte hex key for PII encryption. Generate with `openssl rand -hex 32`
ENCRYPTION_KEY=

# =========================
# Application Configuration
# =========================
SPRING_PROFILES_ACTIVE=docker

# =========================
# LLM Configuration
# =========================
LLM_MODEL=exaone3.5:7.8b

# =========================
# Application Ports
# =========================
BACKEND_PORT=8080
FRONTEND_PORT=3000

# =========================
# Frontend Configuration
# =========================
NEXT_PUBLIC_API_URL=http://localhost:8080/api
